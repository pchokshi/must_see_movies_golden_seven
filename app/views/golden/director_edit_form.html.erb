<h1>Edit a Director</h1>

<form action="http://localhost:3000/directors/update_director/<%= @director.id %>">
  <label>Name</label>
  <input type="text" name="the_name" value="<%= @director.name %>">

  <label>Image URL</label>
  <input type="text" name="the_image_url" value="<%= @director.image_url %>">

  <label>DOB</label>
  <input type="text" name="the_dob" value="<%= @director.dob %>">

  <label>Bio</label>
  <input type="text" name="the_bio" value="<%= @director.bio %>">

  <button>Update Director</button>
</form>
